<body>

    <div id="mydiv">
        <form onsubmit="hide()" autocomplete="on" id="form" method="post">
            <h3>User Details Form</h3>

            First Name: <input type="text" name="name" id="name" placeholder="Enter your first name" onkeypress="fvalid()" required /><br><span id="p1"></span><br> Last Name: <input type="text" name="name1" id="name1" placeholder="Enter your last name"
                onkeypress="lvalid()" required><br>
            <span id="p2"></span><br> Email:
            <input type="email" name="email" id="email" placeholder="enter your mail id" onkeypress="emailvalid()" required><br><span id="p3"></span><br> Gender:
            <input type="radio" name="gender" id="male" value="male">Male
            <input type="radio" name="gender" id="female" value="female">Female<br><span id="p6"></span><br> Password: <input type="password" name="pswd" id="pswd" onkeypress="pasvalid()"><br><span id="p4"></span><br> CPassword: <input type="password"
                name="cpswd" id="cpswd" onkeypress=" Cpasvalid()"><br>
            <span id="p5"></span><br> Terms and condition:<input type="checkbox" id="check" required><br><span id="p7"></span>
            <br> <br> <br><button type="Submit" id="btn" onclick='add()'>Submit</button>
    </div>



    </form>

    <table id="datalist" border="1px" cellspacing="2px" cellpadding="2px">
        <thead>
            <tr>
                <th> FirstName</th>
