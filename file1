<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=<device-width>, initial-scale=1.0">
    <title>Square Animation</title>
    <style>
        .outer{
            height: 200px;
            width: 600px;
            background-color: blue;
            position: relative;
        }

        .inner{
            height: 50px;
            width: 50px;
            background-color: red;
            position: absolute;
        }

        #i2{
            margin:50px 0 0 550px;
        }
    </style>
</head>
<body>
    <div>
        <div class="outer">
            <div class="inner" id="i1"></div>
            <div class="inner" id="i2"></div>
        </div>
        <br>
        <button onclick="start()">Start</button>
        <button onclick="stop()">Stop</button>
    </div>

    <script>
        var div1=document.getElementById('i1');
        var div2=document.getElementById('i2');
        var pos=0;
        var state=1;
        var interval;
        function start(){
            interval=setInterval(()=>{
                if(state==1){
                    pos+=Math.floor(Math.random()*10);
                    div1.style.left=pos+"px";
                    div2.style.right=pos+"px";
                    if(pos>546) state=2;
                }
                if(state==2){
                    pos-=Math.floor(Math.random()*10);
                    div1.style.left=pos+"px";
                    div2.style.right=pos+"px";
                    if(pos<=2) state=1;
                }
            },50);
            return interval;
        }

        function stop(){
           return clearInterval(interval);
        }
    </script>
</body>
</html>
