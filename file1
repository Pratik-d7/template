        <tbody id="tbody">

        </tbody>

    </table>

    <script>
        var span1 = document.getElementById('p1');
        var span2 = document.getElementById('p2');
        var span3 = document.getElementById('p3');
        var span4 = document.getElementById('p4');
        var span5 = document.getElementById('p5');
        var span6 = document.getElementById('p6');
        var span7 = document.getElementById('p7');

        var fname = document.getElementById('name');
        var lname = document.getElementById('name1');
        var email = document.getElementById('email');
        var password = document.getElementById('pswd');
        var cpassword = document.getElementById('cpswd');
        var chckbox = document.getElementById('check');
        var ele = document.getElementsByName('gender');


        var checkfname = /^[a-zA-Z]{3,}$/;
        var checklname = /^[a-zA-Z]{3,}$/;
        var checkemail = /^[a-zA-z0-9]{6,}@[a-zA-z]{5,}[.]{1}[a-zA-Z.]{2,}$/;
        var checkpassword = /^[a-zA-Z]{3,}[!@#$%^&*]{1,}[0-9]{2,}$/
        var checkcpassword = /^[a-zA-Z]{3,}[!@#$%^&*]{1,}[0-9]{2,}$/
            //for fname
        function fvalid() {


            if (fname.value == "") {
                span1.innerHTML = "Enter your First Name..";
            } else if (checkfname.test(fname.value)) {
                span1.innerHTML = "";


            } else {
                span1.innerHTML = "please enter valid credentials";
            }


        }

        function lvalid() {

            if (lname.value == "") {
                span2.innerHTML = "Enter your last Name..";
            } else if (checklname.test(lname.value)) {
                span2.innerHTML = "";


            } else {
                span2.innerHTML = "please enter valid credentials";
            }
        }


        function emailvalid() {

            if (email.value == "") {
                span3.innerHTML = "Enter your Email..";
            } else if (checkemail.test(email.value)) {
                span3.innerHTML = "";


            } else {
                span3.innerHTML = "please enter valid credentials";
            }
        }

        function pasvalid() {

            if (password.value == "") {
                span4.innerHTML = "Enter your Password..";
            } else if (checkpassword.test(password.value)) {
                span4.innerHTML = "";
            } else {
                span4.innerHTML = "please enter valid credentials";
            }
        }


        // if (password.value == cpassword.value) {
        //     console.log(true);
        // } else {
        //     console.log(false)
        // }

        function Cpasvalid() {

            if (cpassword.value == "") {
                span5.innerHTML = "Enter your Password..";
            } else if (checkcpassword.test(cpassword.value)) {
                span5.innerHTML = "password matched";
            } else {
                span5.innerHTML = "please enter valid credentials";
            }
        }




        function add() {



            //Adding data in the table



            //console.log(fname);

            var table = document.getElementById('tbody');
            var tr = document.createElement('tr');


            var td = document.createElement('td');
            var tfname = document.createTextNode(fname.value);
            td.appendChild(tfname);
            tr.appendChild(td);
            table.appendChild(tr);
            console.log(table)




            var td1 = document.createElement('td');
            var tlname = document.createTextNode(lname.value);
            td1.appendChild(tlname);
            tr.appendChild(td1);
            table.appendChild(tr);






            var td3 = document.createElement('td');
            var temail = document.createTextNode(email.value);
            td3.appendChild(temail);
            tr.appendChild(td3);
            table.appendChild(tr);





            for (var i = 0; i < ele.length; i++) {
                if (ele[i].checked) {
                    var td2 = document.createElement('td');
                    var tmale = document.createTextNode(ele[i].value);
                    td2.appendChild(tmale);
                    tr.appendChild(td2);
                    table.appendChild(tr);

                }
                console.log(ele[i].value);

            }

            if (ele.checked == false) {
                span6.innerHTML = "Please select the gender";
            } else if (ele.checked == true) {
                span6.innerHTML = "";


            } else {
                span6.innerHTML = "please Select the Gender";
            }

            //for checkbox

            if (chckbox.checked == false) {
                span7.innerHTML = "Please confirm terms and conditon for proceed further";
            } else if (chckbox.checked == true) {
                span7.innerHTML = "";

            } else {
                span7.innerHTML = "Please confirm terms and conditon for proceed further";
            }





            // var hide = document.getElementById('form');
            // hide.style.display = 'none';





            resetForm();
        }



        function resetForm() {
            document.getElementById('name').value = "";
            document.getElementById('name1').value = "";
            document.getElementById('email').value = "";
            document.getElementById('pswd').value = "";
            document.getElementById('cpswd').value = "";

            document.getElementById('male').checked = false;
            document.getElementById('female').checked = false;
            document.getElementById('check').checked = false;
        }
    </script>




